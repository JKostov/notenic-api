{
  "name": "notenic-api",
  "version": "0.0.1",
  "description": "Notenic api",
  "author": "JKostov <julijekos@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/JKostov/notenic",
  "homepage": "https://notenic.com",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon --config nodemon-dev.json",
    "start:dev2": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node -r ./tsconfig-paths.js dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "export NODE_ENV=test && jest",
    "test:watch": "export NODE_ENV=test && jest --watchAll",
    "test:cov": "export NODE_ENV=test && jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:generate -n",
    "schema:sync": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm schema:sync",
    "schema:drop": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm schema:drop",
    "migration:run": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:run",
    "migration:run-prod": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run",
    "migration:revert": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm migration:revert"
  },
  "dependencies": {
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/microservices": "^6.7.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/typeorm": "^6.1.3",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "dotenv": "^8.0.0",
    "helmet": "^3.20.0",
    "multer": "^1.4.2",
    "nats": "^1.3.2",
    "nest-logger": "^2.1.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.12.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.7",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "typeorm": "^0.2.18",
    "typescript": "3.4.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.5.3",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/multer": "^1.3.7",
    "@types/node": "^10.14.15",
    "@types/supertest": "^2.0.8",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "tslint": "5.16.0",
    "wait-on": "^3.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/$1",
      "@notenic/(.*)": "<rootDir>/notenic/$1"
    }
  }
}
