{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@notenic/*": ["./src/feature/notenic/*"],
      "@files/*": ["./src/feature/files/*"]
    }
  },
  "exclude": ["node_modules"]
}
